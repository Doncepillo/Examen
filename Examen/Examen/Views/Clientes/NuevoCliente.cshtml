@{
    ViewBag.Title = "NuevoCliente";
}

<h2>Nuevo Cliente</h2>

<fieldset>
    <legend>Ingrese Datos</legend>
    @using (@Html.BeginForm("Guardar", "Clientes", FormMethod.Post, new { @class = "form-horizontal" }))
    {

        <div class="form-group">
            <span class="col-md-2">
                Rut
            </span>
            <span class="col-md-6">
                @Html.TextBox("Rut", null, new { @class = "form-control", placeholder = "Ingrese Rut" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Nombre
            </span>
            <span class="col-md-6">
                @Html.TextBox("Nombre", null, new { @class = "form-control", placeholder = "Ingrese Nombre" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Apellidos
            </span>
            <span class="col-md-6">
                @Html.TextBox("Apellidos", null, new { @class = "form-control", placeholder = "Ingrese Apellidos" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Dirección
            </span>
            <span class="col-md-6">
                @Html.TextBox("Direccion", null, new { @class = "form-control", placeholder = "Ingrese Dirección" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Tipo de Cliente
            </span>
            <span class="col-md-6">
                @Html.DropDownList("TipoCliente", new List<SelectListItem>
                    {
                        new SelectListItem{Text="Contado", Value="Contado"},
                        new SelectListItem{Text="Efectivo", Value="Efectivo"},
                        new SelectListItem{Text="Crédito", Value="Credito"},
                        new SelectListItem{Text="Documentado", Value="Documentado"}
                    }, "Seleccione tipo de cliente",
                                                                               new { @class = "form-control" }
                                                                               )
            </span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>

    }
</fieldset>
