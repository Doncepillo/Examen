
@{
    ViewBag.Title = "NuevoProducto";
}

<h2>Nuevo Producto</h2>

<fieldset>
    <legend>Ingrese Datos</legend>
    @using (@Html.BeginForm("Guardar", "Productos", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <div class="form-group">
            <span class="col-md-2">
                Nombre
            </span>
            <span class="col-md-6">
                @Html.TextBox("Nombre", null, new { @class = "form-control", placeholder = "Ingrese Nombre" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Código de Barra
            </span>
            <span class="col-md-6">
                @Html.TextBox("CodigoBarra", null, new { @class = "form-control", placeholder = "Ingrese Código de Barra" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Familia
            </span>
            <span class="col-md-6">
                @Html.TextBox("Familia", null, new { @class = "form-control", placeholder = "Ingrese Familia" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Precio
            </span>
            <span class="col-md-6">
                @Html.TextBox("Precio", null, new { @class = "form-control", placeholder = "Ingrese Precio" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Descuento
            </span>
            <span class="col-md-6">
                @Html.TextBox("Descuento", null, new { @class = "form-control", placeholder = "Ingrese Descuento" })
            </span>
        </div>

        <div class="form-group">
            <span class="col-md-2">
                Descripción
            </span>
            <span class="col-md-6">
                @Html.TextBox("Descripcion", null, new { @class = "form-control", placeholder = "Ingrese Descripción" })
            </span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>

    }
</fieldset>
